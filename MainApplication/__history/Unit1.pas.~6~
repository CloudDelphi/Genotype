  Aurelius.Bind.BaseDataset, Aurelius.Bind.Dataset, FMX.Ani, FMX.Layouts,
  FMX.ExtCtrls, FMX.Edit;


type
  TForm2 = class(TForm)
    Zaloguj: TButton;
    Koniec: TButton;
    Label1: TLabel;
    Login: TLabel;
    Haslo: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
